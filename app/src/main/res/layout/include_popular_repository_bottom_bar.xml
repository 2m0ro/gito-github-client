<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dashboard_list_item_padding"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/open_with_github"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:textColor="@color/dashboard_button"
            android:drawableLeft="@drawable/ic_open_in_browser_blue_24dp"
            android:drawableStart="@drawable/ic_open_in_browser_blue_24dp"
            android:padding="@dimen/dashboard_button_padding"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="@string/github" />

        <Button
            android:id="@+id/traffic"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dashboard_button_padding"
            android:textColor="@color/dashboard_button"
            android:background="?attr/selectableItemBackground"
            android:text="@string/traffic" />

    </LinearLayout>
</LinearLayout>