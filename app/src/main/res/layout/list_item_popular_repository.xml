<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/material_component_cards_space_between_cards"
    android:layout_marginBottom="@dimen/material_component_cards_space_between_cards"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_component_cards_left_and_right_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2" />

        <TextView
            android:id="@+id/subtitle"
            android:paddingTop="@dimen/material_component_cards_padding_from_edge_of_screen_to_card"
            android:paddingBottom="@dimen/material_component_cards_supporting_text_bottom_padding"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_star_grey_20dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/repository_watchers"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/material_component_grid_lists_padding_big"
                android:paddingLeft="@dimen/material_component_grid_lists_padding_big"
                android:paddingEnd="@dimen/material_component_grid_lists_padding_big"
                android:paddingRight="@dimen/material_component_grid_lists_padding_big"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/repository_language_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
                android:layout_marginStart="@dimen/material_layout_keylines_screen_edge_margin"
                android:layout_marginRight="@dimen/material_component_grid_lists_padding_big"
                android:layout_marginEnd="@dimen/material_component_grid_lists_padding_big"
                android:layout_gravity="center_vertical"
                android:background="@drawable/oval_blue"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/repository_language"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/material_component_grid_lists_padding_big"
                android:paddingLeft="@dimen/material_component_grid_lists_padding_big"
                android:paddingEnd="@dimen/material_component_grid_lists_padding_big"
                android:paddingRight="@dimen/material_component_grid_lists_padding_big"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>