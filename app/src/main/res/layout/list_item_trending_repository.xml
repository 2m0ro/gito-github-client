<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/rank"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_component_cards_left_and_right_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/material_component_cards_left_and_right_padding"
        android:paddingLeft="@dimen/material_layout_keylines_content_left_margin_from_screen_edge"
        android:paddingRight="@dimen/material_component_cards_left_and_right_padding"
        android:paddingStart="@dimen/material_layout_keylines_content_left_margin_from_screen_edge"
        android:paddingBottom="@dimen/material_component_cards_left_and_right_padding"
        android:paddingTop="@dimen/material_component_cards_left_and_right_padding">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="@dimen/material_component_cards_padding_from_edge_of_screen_to_card" />

    </LinearLayout>

</FrameLayout>