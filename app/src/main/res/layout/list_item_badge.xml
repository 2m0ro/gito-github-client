<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/badge_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/material_component_cards_left_and_right_padding"
        android:paddingRight="@dimen/material_component_cards_left_and_right_padding"/>

    <View
        android:id="@+id/badge_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trending_badge_bottom_line_height"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:background="@color/trending_badge_line"/>
</FrameLayout>